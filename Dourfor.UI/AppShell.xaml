<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="Dourfor.UI.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:Dourfor.UI"
    xmlns:pages="clr-namespace:Dourfor.UI.Pages"
    Title="Dourfor">

    <!-- Tela de Login (sem Shell visível) -->
    <ShellContent
        Title="Login"
        ContentTemplate="{DataTemplate pages:LoginPage}"
        Route="LoginPage" />

    <!-- Tela de Registro (sem Shell visível) -->
    <ShellContent
        Title="Registro"
        ContentTemplate="{DataTemplate pages:RegisterPage}"
        Route="RegisterPage" />

    <!-- Tela Principal (após login) -->
    <ShellContent
        Title="Home"
        ContentTemplate="{DataTemplate local:MainPage}"
        Route="MainPage" />

</Shell>
