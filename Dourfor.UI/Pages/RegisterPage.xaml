<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Dourfor.UI.Pages.RegisterPage"
             Shell.NavBarIsVisible="False"
             BackgroundColor="#F5F7FA">

    <ScrollView>
        <VerticalStackLayout Padding="30" Spacing="20" VerticalOptions="Center">
            
            <VerticalStackLayout Spacing="10" Margin="0,40,0,40">
                <Label Text="Dourfor"
                       FontSize="48"
                       FontAttributes="Bold"
                       TextColor="#5DC1E9"
                       HorizontalOptions="Center"/>
                <Label Text="Controle Financeiro"
                       FontSize="16"
                       TextColor="#6B7280"
                       HorizontalOptions="Center"/>
            </VerticalStackLayout>

            <Border Padding="30,40"
                    BackgroundColor="White"
                    StrokeThickness="0">
                <Border.Shadow>
                    <Shadow Brush="Black"
                            Opacity="0.1"
                            Radius="20"
                            Offset="0,4"/>
                </Border.Shadow>
                <Border.StrokeShape>
                    <RoundRectangle CornerRadius="20"/>
                </Border.StrokeShape>

                <VerticalStackLayout Spacing="20">
                    
                    <Label Text="Criar Conta"
                           FontSize="28"
                           FontAttributes="Bold"
                           TextColor="#1F2937"
                           HorizontalOptions="Center"
                           Margin="0,0,0,20"/>

                    <VerticalStackLayout Spacing="8">
                        <Label Text="E-mail"
                               FontSize="14"
                               FontAttributes="Bold"
                               TextColor="#374151"/>
                        <Border Padding="15,12"
                                BackgroundColor="#F9FAFB"
                                StrokeThickness="1"
                                Stroke="#E5E7EB">
                            <Border.StrokeShape>
                                <RoundRectangle CornerRadius="12"/>
                            </Border.StrokeShape>
                            <Entry x:Name="EmailEntry"
                                   Placeholder="seu@email.com"
                                   Keyboard="Email"
                                   BackgroundColor="Transparent"
                                   TextColor="#1F2937"
                                   PlaceholderColor="#9CA3AF"/>
                        </Border>
                    </VerticalStackLayout>

                    <VerticalStackLayout Spacing="8">
                        <Label Text="Senha"
                               FontSize="14"
                               FontAttributes="Bold"
                               TextColor="#374151"/>
                        <Border Padding="15,12"
                                BackgroundColor="#F9FAFB"
                                StrokeThickness="1"
                                Stroke="#E5E7EB">
                            <Border.StrokeShape>
                                <RoundRectangle CornerRadius="12"/>
                            </Border.StrokeShape>
                            <Entry x:Name="PasswordEntry"
                                   Placeholder="Minimo 6 caracteres"
                                   IsPassword="True"
                                   BackgroundColor="Transparent"
                                   TextColor="#1F2937"
                                   PlaceholderColor="#9CA3AF"/>
                        </Border>
                    </VerticalStackLayout>

                    <VerticalStackLayout Spacing="8">
                        <Label Text="Confirmar Senha"
                               FontSize="14"
                               FontAttributes="Bold"
                               TextColor="#374151"/>
                        <Border Padding="15,12"
                                BackgroundColor="#F9FAFB"
                                StrokeThickness="1"
                                Stroke="#E5E7EB">
                            <Border.StrokeShape>
                                <RoundRectangle CornerRadius="12"/>
                            </Border.StrokeShape>
                            <Entry x:Name="ConfirmPasswordEntry"
                                   Placeholder="Digite a senha novamente"
                                   IsPassword="True"
                                   BackgroundColor="Transparent"
                                   TextColor="#1F2937"
                                   PlaceholderColor="#9CA3AF"/>
                        </Border>
                    </VerticalStackLayout>

                    <Label x:Name="ErrorLabel"
                           TextColor="#EF4444"
                           FontSize="13"
                           IsVisible="False"
                           HorizontalOptions="Center"/>

                    <Label x:Name="SuccessLabel"
                           TextColor="#10B981"
                           FontSize="13"
                           IsVisible="False"
                           HorizontalOptions="Center"/>

                    <Button x:Name="RegisterButton"
                            Text="CRIAR CONTA"
                            FontSize="16"
                            FontAttributes="Bold"
                            BackgroundColor="#5DC1E9"
                            TextColor="Black"
                            HeightRequest="56"
                            CornerRadius="12"
                            Margin="0,10,0,0"
                            Clicked="OnRegisterClicked">
                        <Button.Shadow>
                            <Shadow Brush="#5DC1E9"
                                    Opacity="0.3"
                                    Radius="10"
                                    Offset="0,4"/>
                        </Button.Shadow>
                    </Button>

                    <ActivityIndicator x:Name="LoadingIndicator"
                                       IsRunning="False"
                                       IsVisible="False"
                                       Color="#5DC1E9"
                                       HeightRequest="40"/>

                </VerticalStackLayout>
            </Border>

            <HorizontalStackLayout HorizontalOptions="Center" Spacing="5" Margin="0,20,0,0">
                <Label Text="Ja tem uma conta?"
                       FontSize="14"
                       TextColor="#6B7280"/>
                <Label Text="Fazer login"
                       FontSize="14"
                       FontAttributes="Bold"
                       TextColor="#5DC1E9">
                    <Label.GestureRecognizers>
                        <TapGestureRecognizer Tapped="OnLoginTapped"/>
                    </Label.GestureRecognizers>
                </Label>
            </HorizontalStackLayout>

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
